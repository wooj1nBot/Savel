<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/main"
        app:srcCompat="@drawable/east_48px"
        app:tint="@color/main" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@drawable/stroke_login">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="false"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="6dp"
            app:srcCompat="@drawable/close_48px"
            app:tint="#EF5350" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@id/tv_title"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@id/tv_title"
            app:srcCompat="@drawable/where_to_vote_48px" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:textSize="13sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/iv_icon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/stroke_login"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:minWidth="120dp"
                android:singleLine="true"
                android:textColor="#222222"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/tv_location"
                android:padding="2dp"
                app:srcCompat="@drawable/edit_48px" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>